<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="yei.poli.edu.botonpanico.AyudaActivity"
    tools:showIn="@layout/activity_ayuda">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/configuracion"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:text="@string/prueba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPrueba"
            android:paddingBottom="@dimen/text_margin"
            style="@style/AppTheme.titulosConfig"/>


        <Button
            android:text="@string/enviarPrueba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="enviarPrueba"
            android:paddingBottom="@dimen/text_margin"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:text="@string/ayuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAyuda"
            style="@style/AppTheme.titulosConfig"/>

                <ImageView
                    app:srcCompat="@drawable/ayuda_2"
                    android:id="@+id/imageView2"
                    style="@style/AppTheme.imagenAyuda" />

                <ImageView
                    app:srcCompat="@drawable/ayuda_3"
                    android:id="@+id/imageView3"
                    style="@style/AppTheme.imagenAyuda" />

                <ImageView
                    app:srcCompat="@drawable/ayuda_4"
                    android:id="@+id/imageView4"
                    style="@style/AppTheme.imagenAyuda" />

                <ImageView
                    app:srcCompat="@drawable/ayuda_5"
                    android:id="@+id/imageView5"
                    style="@style/AppTheme.imagenAyuda" />

        <!--
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:text="@string/ayuda_text" />
                -->
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
