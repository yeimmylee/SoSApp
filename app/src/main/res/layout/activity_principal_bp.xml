<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal_bp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="yei.poli.edu.botonpanico.PrincipalBPActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView" />

    <Switch
        android:text="@string/activarBP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activarBP"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/btnConfiguracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activarBP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/btnConfiguracion"
        android:onClick="mostrarConfiguracion"/>

    <Button
        android:text="@string/btnHistorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnConfiguracion"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnHistorial"
        android:onClick="mostrarAlertas"/>

    <Button
        android:text="@string/btnAcercaDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAyuda"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnAcercaDe"
        android:onClick="mostrarAcercaDe" />

    <Button
        android:text="@string/btnAyuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAyuda"
        android:layout_below="@+id/btnHistorial"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="mostrarAyuda" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/activarBP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
