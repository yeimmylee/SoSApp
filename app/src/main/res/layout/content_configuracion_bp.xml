        <!-- *********************************************************************************** -->
        <!-- *********************************************************************************** -->
        <!-- Tipo de Envío -->
        <!-- *********************************************************************************** -->
        <!-- *********************************************************************************** -->
        <TextView
            android:text="@string/tipoEnvio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tipoEnvio"
            style="@style/AppTheme.titulosConfig"/>

        <Switch
            android:text="@string/enviarMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enviarMensaje"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:splitTrack="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />


        <Switch
            android:text="@string/enviarCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enviarCorreo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <!-- *********************************************************************************** -->
        <!-- *********************************************************************************** -->
        <!-- Tipo de Envío -->
        <!-- *********************************************************************************** -->
        <!-- *********************************************************************************** -->

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_margin" />

        <TextView
            android:text="@string/tipoAdjunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tipoAdjunto"
            style="@style/AppTheme.titulosConfig"/>

        <CheckBox
            android:text="@string/adjuntarImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAcercaDe"
            android:layout_centerHorizontal="true"
            android:id="@+id/adjuntarImagenes"
            android:onClick="onCheckboxClicked" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <CheckBox
            android:text="@string/adjuntarAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAcercaDe"
            android:layout_centerHorizontal="true"
            android:id="@+id/adjuntarAudio"
            android:onClick="onCheckboxClicked"  />


